<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css">

    <!-- Other CSS -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Oswald" />

    <!-- Custom Style Sheet -->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/PagedList.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Site.css")" />


    @RenderSection("Styles", false)
    @RenderSection("head", false)
    @Styles.Render("~/Content/css")

    <title>Crypto Asset Tracker - Sport</title>
</head>

<body class="backgroundGradient">
    <div class="topdiv">
        @*<div class="container" style="min-width: 1030px;">*@
            <nav class="navbar navbar-dark container" style="min-width: 1030px;">
                <!--brand-->
                <div class="navbar-brand">
                    <img src="~/Images/CAT_logo_placeholder.png" class="img-fluid" alt="Crypto Asset Tracker" />
                </div>
                <!--user/login status-->
                <div class="col d-flex justify-content-end">
                    @Html.Partial("_LoginPartial")
                </div>
                <!--toggle button-->
                <div class="col-1 text-right">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <!--nav links-->
                <div class="collapse navbar-collapse float-right mr-3" id="navbarText">
                    <ul class="nav navbar-nav flex-row ml-auto float-right">
                        <li class="nav-item">
                            <a class="nav-link pr-5 navlink navlink_text" href="@Url.Content("~/Home")">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link pr-5 navlink navlink_text" href="@Url.Content("~/Player/Index")">
                                Players
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link pr-5 navlink navlink_text" href="@Url.Content("~/Moment/Index")">
                                Assets
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link pr-5 navlink navlink_text" href="@Url.Content("~/Showcase/Index")">
                                Collections
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link pr-5 navlink navlink_text" href="@Url.Content("~/SoldMoment/Index")">
                                Sold Assets
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navlink navlink_text" href="@Url.Content("~/Home/About")">
                                About
                            </a>
                        </li>
                    </ul><!--nav-items-->
                </div><!--collapse-->
            </nav><!--nav-->
        <!--</div>--><!--container-->
        <!--content-->
        <div class="body-content">
            @RenderBody()
        </div>
    </div><!--topdiv-->
    <!--footer-->
    <div class="footer text-info">
        <p>&copy; @DateTime.Now.Year - Crypto Asset Tracker</p>
    </div>

    <!--scripts-->
    <!--Jquery-->
    @Scripts.Render("~/bundles/jquery")
    <!--Bootstrap/Popper-->
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.js"></script>

    @RenderSection("scripts", required: false)

    @section Scripts{

    }
</body>
</html>

