@model CAT.Models.Moment_Models.MomentDetails

@{
    ViewBag.Title = "Details";
}

<div class="container containerGradient card_container" style="min-width: 1000px">
    <div class="row d-flex justify-content-center">
        <div class="col-6">
            <div class="card mx-auto" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                <div class="picture_container">
                    <img class="card-img-top" src="~/Images/500x500_placeholder.png" alt="Player Picture Placeholder" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                    @{var mint = (int)Model.MomentMint;}
                    <h1 class=" display-4 top_left_text text-white">
                        @Html.DisplayFor(model => model.MomentTier)
                    </h1>
                    <h1 class=" display-4 bottom_right_text @(mint == 1 ? "limited" : "common")">
                        @Html.DisplayFor(model => model.Mint)
                    </h1>
                </div> <!--picture container-->
                <div class="container p-2">
                    <h5 class="text-center text-info display-4">@Html.DisplayFor(model => model.PlayerFullName)</h5>
                    <hr class="bg-dark" />
                    <h5 class="text-center mb-2 text-muted">@Html.DisplayFor(model => model.MomentComplete)</h5>
                    <hr class="bg-dark" />
                    <div class="row text-center align-items-center">
                        <section class="col">
                            <h6>Price</h6>
                            <h6 class="text-muted">$@Html.DisplayFor(model => model.IndividualMomentPrice)</h6>
                        </section>
                        <section class="col">
                            <h6>Serial/Circulating Count</h6>
                            <h6 class="text-muted">@Html.DisplayFor(model => model.SerialComplete)</h6>
                        </section>
                    </div>
                    <hr class="bg-dark" />
                    <h4 class="text-center mb-2">Showcases</h4>
                    @foreach (var item in Model.Showcases)
                    {
                        var showcaseName = @Html.DisplayFor(modelItem => item.ShowcaseName);
                        var showcase = showcaseName.ToString();

                        <h6 class="text-center">
                            @Html.ActionLink(showcase, "Details", "Showcase", new { id = item.ShowcaseId }, htmlAttributes: new { @class = "playerHover playerText" })
                            @Html.DisplayFor(modelItem => item.ShowcaseName)
                            @Html.ActionLink("View Showcase", "Details", "Showcase", new { id = item.ShowcaseId }, null)
                        </h6>
                    }
                    <hr class="bg-dark" />
                    <h3 class="text-center mb-2">Asset Management</h3>
                    <p class="text-center text-muted">Manage Asset by selecting from one of the options below.</p>
                    <div class="row text-center">
                        <div class="col form-group">
                            <a href="@Url.Action("Edit", "Moment", new { id = Model.MomentId } )" class="btn btn-info" style="font-size: 20px;">
                                <i class="fas fa-edit text-warning" style="font-size: 24px;"></i>
                                Update Asset
                            </a>
                            <a href="@Url.Action("Create", "SoldMoment", new { id = Model.MomentId } )" class="btn btn-info" style="font-size: 20px;">
                                <i class="fas fa-coins text-warning" style="font-size: 24px;"></i>
                                Sell Asset
                            </a>
                            <a href="@Url.Action("Delete", "Moment", new { id = Model.MomentId } )" class="btn btn-info" style="font-size: 20px;">
                                <i class="fas fa-trash text-warning" style="font-size: 24px;"></i>
                                Remove Asset
                            </a>
                        </div><!--col-->
                    </div><!--row-->
                </div><!--card text-->
            </div><!--card-->
        </div><!--col-->
    </div><!--row-->
</div><!--card container-->
<!--nav button-->
<div class="container p-3" style="min-width: 1000px;">
    <div class="row text-right">
        <div class="col form-group">
            <a class="btn btn-outline-info" style="font-size: 20px;" href="@Url.Content("~/Moment/Index")">
                <i class="fas fa-arrow-left text-warning" style="font-size: 24px;"></i> Back to Assets
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

