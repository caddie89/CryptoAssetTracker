@model CAT.Models.MomentShowcase_Models.MomentShowcaseDetails

@{
    ViewBag.Title = "Delete";
}

<!--header information-->
<div class="container text-danger p-3" style="min-width: 1000px;">
    <div class="row" style="min-height: 8vh;">
        <section class="col align-self-end">
            <h1 class="display-4">
                Remove Asset from Collection
            </h1>
        </section>
        <div class="w-100"></div>
        <section class="col align-self-center">
            <span style="font-weight: 200; font-size: 18px;">
                If removed, an Asset can always be re-added to a Collection.
            </span>
        </section>
    </div><!--row-->
</div><!--container-->

<div class="container containerGradient p-3" style="min-width: 1000px; min-height: 50vh;">
    <div class="row align-items-center">
        <div class="col">
            <img class="card-img-top box_shadow" src="~/Images/500x500_placeholder.png" alt="Player Picture Placeholder">
        </div>
        <div class="col text-left">
            <h3>The following action will remove</h3>
            <hr class="bg-dark" />
            <h2>
                <span class="text-info">@Html.DisplayFor(model => model.PlayerFullName)'s</span> <br />
                <br />
                <span class="text-info">@Html.DisplayFor(model => model.MomentComplete)</span><br />
            </h2>
            <hr class="bg-dark" />
            <h3>from</h3>
            <hr class="bg-dark" />
            <h2>
                <span class="text-info">@Html.DisplayFor(model => model.ShowcaseName)</span>
            </h2>
            <hr class="bg-dark" />
            <br />
            <!--remove button-->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions">
                    <button type="submit" class="btn btn-danger" style="font-size: 24px;">
                        <i class="fas fa-trash text-white" style="font-size: 28px;"></i>
                        Remove Asset
                    </button>
                </div>
            }
        </div><!--col-->
    </div><!--row-->
</div><!--container-->
<!--nav button-->
<div class="container p-3" style="min-width: 1000px;">
    <div class="row text-right">
        <div class="col form-group">
            <a class="btn btn-outline-info" style="font-size: 20px;" href="@Url.Content("~/Showcase/Index")">
                <i class="fas fa-arrow-left text-warning" style="font-size: 24px;"></i> Back to Collections
            </a>
        </div>
    </div>
</div>
